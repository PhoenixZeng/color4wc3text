{
	"name": "color4wc3text",
	"displayName": "ColorPicker颜色选择器",
	"description": "War3ColorPicker颜色选择器,也支持一些常用格式",
	"version": "0.1.1",
	"publisher": "PhoenixZeng",
	"engines": {
		"vscode": "^1.37.0"
	},
	"categories": [
		"Other"
	],
	"icon": "resource/icon.png",
	"keywords": [
		"warcraft",
		"wc3",
		"war3",
		"color",
		"colour",
		"color picker",
		"colour picker"
	],
	"markdown": "github",
	"activationEvents": [
		"onLanguage:lua",
		"onLanguage:jass",
		"onLanguage:vjass",
		"onLanguage:ini",
		"onLanguage:zinc",
		"onLanguage:fdf",
		"onLanguage:json",
		"onLanguage:xml",
		"onLanguage:html",
		"onLanguage:css"
	],
	"main": "./out/extension.js",
	"contributes": {},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
